 public boolean hasBuddy(Node root, Integer buddy){
    Node current = root;
    while(current != null){
       
        if(buddy.equals(current.buddy) && buddy.next(current.buddy).equals(current.buddy) ){
       
        if(current.buddy.equals(buddy)){
      
