    /**
     * Set The size of the System
     */
    @Test
    public void SetSystemSizeTest1()
    {
        //Uses valid inputs
        ArrayList <Memory> memList = BinaryBuddySystemTree.setSystemSize(64);
        System.out.println("Number of memory blocks in arraylist should be 1"); 
        System.out.println("Number of memory blocks in arraylist is " + memList.size());
        System.out.println("Size of memory block should be 64");
        System.out.println("Size of memory block is " + memList.get(0).getValue());

        System.out.println("\n\n");

        
    }
    
    @Test
	public void roundSizeTest(){
		BinaryBuddySystemTree test = new BinaryBuddySystemTree(0);
		int result = test.roundSize(3);
		assertEquals(4, result);
		
		result = test.roundSize(4);
		assertEquals(4, result);
		
		result = test.roundSize(63);
		assertEquals(64, result);
		
		result = test.roundSize(1);
		assertEquals(2, result);
		
		result = test.roundSize(61);
		assertEquals(64, result);
		
		result = test.roundSize(8);
		assertEquals(8, result);
		
	}
	
    /**
     * Test CreateProccess method, located in BinaryBuddySystem Class
